<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新用户"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_edit_photo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/selector_bg_ordinary_item"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_user1" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="点击设置头像"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_bg_input_view"
                        android:orientation="vertical"
                        android:paddingLeft="0dp">

                        <RelativeLayout
                            android:id="@+id/rl_user"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/selector_bg_ordinary_item">

                            <TextView
                                style="@style/itemTextSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="25dp"
                                android:text="账号"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/tv_userid"
                                style="@style/itemTextSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="25dp"
                                android:textColor="#000" />

                            <View
                                android:id="@+id/lin1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#cacbce" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/tv_userid"
                                android:layout_toStartOf="@+id/tv_userid"
                                android:text="(系统自动生成)"
                                android:textColor="#888" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/selector_bg_ordinary_item"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1.2"
                                android:gravity="center_vertical"
                                android:text="密码"
                                android:textColor="#000" />

                            <EditText
                                android:id="@+id/et_password"
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="#fff"
                                android:hint="密码"
                                android:inputType="textPassword"
                                android:textColor="#000"
                                android:textColorHint="#aaa" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#cacbce" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/selector_bg_ordinary_item"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1.2"
                                android:gravity="center_vertical"
                                android:text="确认密码"
                                android:textColor="#000" />

                            <EditText
                                android:id="@+id/et_confirm_password"
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="#fff"
                                android:hint="两次密码一致"
                                android:inputType="textPassword"
                                android:textColor="#000"
                                android:textColorHint="#aaa" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#cacbce" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/selector_bg_ordinary_item"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1.2"
                                android:gravity="center_vertical"
                                android:text="姓名"
                                android:textColor="#000" />

                            <EditText
                                android:id="@+id/et_name"
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="#fff"
                                android:hint="请填写真实姓名"
                                android:textColor="#000"
                                android:textColorHint="#aaa" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#cacbce" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/selector_bg_ordinary_item"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1.2"
                                android:gravity="center_vertical"
                                android:text="身份证号"
                                android:textColor="#000" />

                            <EditText
                                android:id="@+id/et_ID"
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="#fff"
                                android:hint="请填写身份证号"
                                android:textColor="#000"
                                android:textColorHint="#aaa" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#cacbce" />

                        <LinearLayout
                            android:id="@+id/ll_edit_sex"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/selector_bg_ordinary_item"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1.2"
                                android:gravity="center_vertical"
                                android:text="称谓"
                                android:textColor="#000" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:padding="16dp"
                                    android:src="@drawable/icon_personal_next" />

                                <EditText
                                    android:id="@+id/et_sex"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#0000"
                                    android:focusable="false"
                                    android:hint="请选择--->>"
                                    android:textColor="#000"
                                    android:textColorHint="#999"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#cacbce" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/selector_bg_ordinary_item"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1.2"
                                android:gravity="center_vertical"
                                android:text="电子邮箱"
                                android:textColor="#000" />

                            <EditText
                                android:id="@+id/et_mail"
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="#fff"
                                android:hint="请填写邮箱"
                                android:textColor="#000"
                                android:textColorHint="#aaa" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#cacbce" />

                        <LinearLayout
                            android:id="@+id/ll_edit_region"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/selector_bg_ordinary_item"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/itemTextSize"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1.2"
                                android:gravity="center_vertical"
                                android:text="所在地"
                                android:textColor="#000" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:padding="16dp"
                                    android:src="@drawable/icon_personal_next" />

                                <EditText
                                    android:id="@+id/et_region"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#0000"
                                    android:focusable="false"
                                    android:hint="请选择--->>"
                                    android:textColor="#000"
                                    android:textColorHint="#999"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <Button
                                android:id="@+id/btn_submit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/selector_user_login_btn"
                                android:text="提交" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
