<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <!--律所查询-->
            <LinearLayout
                android:id="@+id/ll_firm_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_home_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_home_item_head"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/icon_firm_find" />

                    <TextView
                        android:id="@+id/tv_firm_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(12条)"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_home_bg_item_text_name"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="律所名称"
                        android:textColor="#fff" />

                    <EditText
                        android:id="@+id/et_firm_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_firm_name_input"
                        android:hint="请输入律所名称"
                        android:padding="6dp"
                        android:textColor="#000"
                        android:textColorHint="#999"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_home_bg_item_text_name"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="许可证号"
                        android:textColor="#fff" />

                    <EditText
                        android:id="@+id/et_firm_license"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_firm_name_input"
                        android:hint="请输入许可证号"
                        android:padding="6dp"
                        android:textColor="#000"
                        android:textColorHint="#999"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_firm_find"
                    style="@style/findButton"
                    android:text="查询" />

            </LinearLayout>
            <!--律师查询-->
            <LinearLayout
                android:id="@+id/ll_lawyer_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_home_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_home_item_head"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@drawable/icon_lawyer_find" />

                    <TextView
                        android:id="@+id/tv_lawyer_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(12条)"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_home_bg_item_text_name"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="姓        名"
                        android:textColor="#fff" />

                    <EditText
                        android:id="@+id/et_lawyer_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_firm_name_input"
                        android:hint="请输入律师姓名"
                        android:padding="6dp"
                        android:textColor="#000"
                        android:textColorHint="#999"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_home_bg_item_text_name"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="执业证号"
                        android:textColor="#fff" />

                    <EditText
                        android:id="@+id/et_lawyer_license"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_firm_name_input"
                        android:hint="请输入律师执业证号"
                        android:padding="6dp"
                        android:textColor="#000"
                        android:textColorHint="#999"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_lawyer_find"
                    style="@style/findButton"
                    android:text="查询" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_home_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_home_item_head"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="6dp"
                        android:src="@drawable/icon_consultation" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="公众咨询"
                        android:textColor="#fff"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btn_consultation"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_bg_find"
                        android:text="法律问题咨询"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_ranking"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_bg_find"
                        android:text="解答排行"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_answer"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn_bg_find"
                        android:text="已解答问题"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_legal_encyclopedia"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_bg"
                android:text="百姓法宝"
                android:textColor="#fff"
                android:textSize="18sp" />
            <!--法律法规-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_home_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_home_item_head"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="40dp"

                        android:padding="9dp"
                        android:src="@drawable/icon_laws" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_law_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

                <TextView
                    android:id="@+id/tv_law_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_item"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="查看更多"
                    android:textColor="@color/text_user_login_textvew" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>