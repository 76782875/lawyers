<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_lawyer_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_lawyer_item"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lawyer_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="李某某"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_lawyer_certificates"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:gravity="center"
            android:text="15101199410985981"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_lawyer_sex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="男"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_lawyer_office"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="四川成都市律师事务所"
            android:textColor="#000"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="负面指数:"
                        android:textColor="#444"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_lawyer_negative"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="无"
                        android:textColor="#f00"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="荣誉表彰:"
                        android:textColor="#444"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_lawyer_commend"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="#f00"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="公益服务:"
                        android:textColor="#444"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_lawyer_public_welfare"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="无"
                        android:textColor="#f00"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="年度考核:"
                        android:textColor="#444"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_lawyer_assessment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="无"
                        android:textColor="#f00"
                        android:textSize="13sp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <!--收藏功能暂时禁用-->
            <Button
                android:id="@+id/btn_lawyer_collection"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selecter_lawyer_button"
                android:enabled="false"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/text_lawyer_btn"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>