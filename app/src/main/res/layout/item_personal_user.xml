<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_personal_item_root"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/selector_bg_ordinary_item"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_personal_photo"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:src="@drawable/icon_user1" />

    <ImageView
        android:id="@+id/tv_personal_next"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:src="@drawable/icon_personal_next" />

    <TextView
        android:id="@+id/tv_personal_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="title"
        android:textColor="#888"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_personal_photo"
        android:layout_toEndOf="@+id/iv_personal_photo" />

</RelativeLayout>